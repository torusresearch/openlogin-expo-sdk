{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
