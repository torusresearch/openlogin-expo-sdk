{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "esnext",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es6"],
    "rootDir": "src",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
